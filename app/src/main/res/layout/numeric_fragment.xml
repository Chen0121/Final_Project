<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/q"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/question_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/question"
        android:layout_toEndOf="@+id/question" />

    <CheckBox
        android:id="@+id/A_fragment"
        android:text="@string/answera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question"/>
    <EditText
        android:id="@+id/txt_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/A_fragment"
        android:layout_toEndOf="@+id/A_fragment"/>
    <CheckBox
        android:id="@+id/B_fragment"
        android:text="@string/answerb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_A"/>
    <EditText
        android:id="@+id/txt_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/B_fragment"
        android:layout_below="@+id/txt_A"/>
    <CheckBox
        android:id="@+id/C_fragment"
        android:text="@string/answerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_B"/>
    <EditText
        android:id="@+id/txt_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/C_fragment"
        android:layout_below="@+id/txt_B"/>
    <CheckBox
        android:id="@+id/D_fragment"
        android:text="@string/answerd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_C"/>
    <EditText
        android:id="@+id/txt_D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/D_fragment"
        android:layout_below="@+id/txt_C"/>

    <CheckBox
        android:id="@+id/E_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_D"
        android:text="@string/accuracy" />

    <EditText
        android:id="@+id/accuracyline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/D_fragment"
        android:layout_below="@+id/txt_D"/>

    <TextView
        android:id="@+id/textview_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/E_fragment"
        android:text="@string/c" />

    <EditText
        android:id="@+id/correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accuracyline"
        android:layout_toEndOf="@id/textview_correct" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/del"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>